	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"files": true,
		"esm": true
	}
}
